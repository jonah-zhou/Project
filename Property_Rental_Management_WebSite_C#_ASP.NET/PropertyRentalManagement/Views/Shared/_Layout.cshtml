@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">

@{
    var loggedInUserType = ViewBag.LoggedInUserType ?? User.FindFirst(ClaimTypes.Role)?.Value;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PropertyRentalManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PropertyRentalManagement.styles.css" asp-append-version="true" />
    <style>
        body {
            padding-top: 56px;
        }

        .navbar {
            background-color: #343a40; /* Dark background color */
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand,
        .navbar-light .navbar-nav .nav-link {
            color: #000 !important; /* Black text color */
            font-weight: bold; /* Bold text */
        }

        .navbar-toggler-icon {
            background-color: #000; /* Black background color for the toggler icon */
        }

        .navbar-light .navbar-nav .nav-link:hover {
            color: #f8f9fa;
        }

        .footer {
            padding: 1rem 0;
            background-color: #f8f9fa;
            margin-top: 20px;
        }
    </style>

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Property Rental Management</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Logout">Logout</a>
                        </li>

                        @if (loggedInUserType == "0")
                        {

                        }
                        else if (loggedInUserType == "3")//tenant
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Apartments" asp-action="Index">Apartment</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Appointments" asp-action="Index">Appointment</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Messages" asp-action="Index">Message</a>
                            </li>

                        }
                        else if (loggedInUserType == "2")//manager
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Buildings" asp-action="Index">Building</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Apartments" asp-action="Index">Apartment</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Appointments" asp-action="Index">Appointment</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Messages" asp-action="Index">Message</a>
                            </li>
                        }
                        else if (loggedInUserType == "1")//user,admin
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">User</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Buildings" asp-action="Index">Building</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Apartments" asp-action="Index">Apartment</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Appointments" asp-action="Index">Appointment</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Messages" asp-action="Index">Message</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - PropertyRentalManagement
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

