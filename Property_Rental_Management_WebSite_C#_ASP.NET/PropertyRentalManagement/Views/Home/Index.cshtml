    ViewBag.LoggedInUserType = "0";
}

<style>
    div {
        text-align: center;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }
    h1 {
        font-size: 2.5em;
        font-weight: bold;
        margin-bottom: 20px;
        color: #007bff;
    }
    p {
        font-size: 1.1em;
        line-height: 1.6;
        color: #555;
        margin-top: 20px;
    }
    a {
        display: inline-block;
