<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamePlayActivity"
    android:background="#536B98"
    >
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvMistakeAndHint"
        android:background="#050505"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/button_round_shape"
            android:padding="5dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/btnReturn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/baseline_keyboard_backspace_24" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/btnClearAll"
                android:text="Clear All"
                android:background="@drawable/button_shape_corner"
                android:layout_marginRight="5dp"
                style="@style/gameplayTopButton"
                />

            <Button
                android:id="@+id/btnSubmit"
                android:text="Submit"
                android:background="@drawable/button_shape_corner"
                style="@style/gameplayTopButton"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tvMistakeAndHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="fill_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mistakes:"
                android:textColor="#FBFDFC"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/tvMistake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FBFDFC"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hints left:"
                android:textColor="#FFD600"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/tvHintCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#FFD600"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"/>

        </LinearLayout>


    </LinearLayout>

    <GridLayout
        android:id="@+id/kakuroGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvMistakeAndHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/controlPanel"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:alignmentMode="alignMargins"
        android:columnCount="10"
        android:rowCount="10">

    </GridLayout>

    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="fill_horizontal">

        <FrameLayout
            android:id="@+id/frameNumberPalette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv7"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="7" />
                    <TextView
                        android:id="@+id/tv8"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="8" />
                    <TextView
                        android:id="@+id/tv9"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv4"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="4" />
                    <TextView
                        android:id="@+id/tv5"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="5" />
                    <TextView
                        android:id="@+id/tv6"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv1"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="1" />

                    <TextView
                        android:id="@+id/tv2"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="2" />

                    <TextView
                        android:id="@+id/tv3"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="3" />
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnRemove"
                    android:text="Clear"
                    android:background="@drawable/button_shape"
                    style="@style/gameplayBottomButton"/>

                <Button
                    android:id="@+id/btnHint"
                    android:text="Hint"
                    android:background="@drawable/button_shape"
                    style="@style/gameplayBottomButton"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btnCheck"
                    android:text="Check"
                    android:background="@drawable/button_shape"
                    style="@style/gameplayBottomButton"/>

                <Button
                    android:id="@+id/btnSave"
                    android:text="Save"
                    android:background="@drawable/button_shape"
                    style="@style/gameplayBottomButton"/>
            </LinearLayout>



        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameNotesNumberPalette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNotes7"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="7" />
                    <TextView
                        android:id="@+id/tvNotes8"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="8" />
                    <TextView
                        android:id="@+id/tvNotes9"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="9" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNotes4"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="4" />
                    <TextView
                        android:id="@+id/tvNotes5"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="5" />
                    <TextView
                        android:id="@+id/tvNotes6"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNotes1"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="1" />

                    <TextView
                        android:id="@+id/tvNotes2"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="2" />

                    <TextView
                        android:id="@+id/tvNotes3"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="3" />
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>