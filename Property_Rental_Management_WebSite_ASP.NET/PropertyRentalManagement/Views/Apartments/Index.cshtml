@model IEnumerable<PropertyRentalManagement.Models.Apartment>
@using System.Security.Claims

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var loggedInUserType = User.FindFirst(ClaimTypes.Role)?.Value;
}

<h1>Index</h1>

<p>
    @if (loggedInUserType == "1" || loggedInUserType == "2")
    {
        <a asp-action="Create">Create New</a>
    }
</p>

<form asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" name="searchString" placeholder="Search" class="form-control" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApartmentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApartmentNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Building.BuildingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Description)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
            <td>                   
                    @if (loggedInUserType == "3")//tenant
                    {
                        <a asp-action="Details" asp-route-id="@item.ApartmentId">Details</a>
                    } 
                    else //admin and manager
                    {
                         <a asp-action="Edit" asp-route-id="@item.ApartmentId">Edit</a>
                         <a asp-action="Details" asp-route-id="@item.ApartmentId">Details</a>
                         <a asp-action="Delete" asp-route-id="@item.ApartmentId">Delete</a>                    
                    }
            </td>
        </tr>
}
    </tbody>
</table>
